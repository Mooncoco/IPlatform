<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <ImageView
        android:id="@+id/game_invite_gridview_imageview_head"
        style="@style/face_size1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wyx_face_default" />

    <ImageView
        android:id="@+id/game_invite_gridview_imageview_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/game_invite_gridview_imageview_head"
        android:layout_alignRight="@+id/game_invite_gridview_imageview_head"
        android:src="@drawable/wyx_invite_imageview_pick"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/game_invite_gridview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_invite_gridview_imageview_head"
        android:layout_centerHorizontal="true"
        android:paddingBottom="25dp"
        android:paddingTop="15dp" />

</RelativeLayout>